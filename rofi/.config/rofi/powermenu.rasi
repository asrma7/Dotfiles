configuration {
    matching: "regex";
    drun-match-fields: "name";
    terminal: "/usr/bin/kitty";
}

@theme "~/.cache/wal/colors-rofi-dark.rasi"

* {
    font: "MesloLGS Nerd Font Mono 12";
    margin:     0px;
    padding:    0px;
    spacing:    0px;
}

window {
    location: north;
    y-offset: -30;
    width:          400;
    border-radius:  15px;

    border: 3px;
    border-color: @border-color;
}

mainbox {
    padding:    8px;
}

inputbar {
    enabled:false;
}

prompt {
    enabled: false;
}

listview {
    background-color:   transparent;
    margin:     1px 0 0;
    columns:    1;
    lines:      6;
    fixed-height: false;
}

element {
    orientation: horizontal;
    padding:        8px 18px;
    spacing:        8px;
    border-radius:  16px;
}

element normal urgent {
}

element normal active {
}

element selected normal, element selected active {
}

element-icon {
    size:           1em;
    vertical-align: 0.5;
}

element-text {
    text-color: inherit;
}
